<?xml version="1.0"?>
<!--
  Reordena firstname/lastname, deja región vacía,
  deshabilita Sign In en shipping-step
  y oculta postcode en shipping y billing
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="checkout">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">

                                        <!-- Shipping step -->
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">

                                                <!-- 1) Deshabilitar el bloque de "authentication" -->
                                                <item name="authentication" xsi:type="array">
                                                    <item name="componentDisabled" xsi:type="boolean">true</item>
                                                </item>

                                                <!-- 2) Campos y región -->
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="shipping-address-fieldset" xsi:type="array">
                                                            <item name="children" xsi:type="array">

                                                                <!-- Nombre primero -->
                                                                <item name="firstname" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="number">10</item>
                                                                </item>

                                                                <!-- Apellidos después -->
                                                                <item name="lastname" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="number">20</item>
                                                                </item>

                                                                <!-- Región vacía -->
                                                                <item name="region_id" xsi:type="array">
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="caption" xsi:type="string">-- Seleccione su región --</item>
                                                                    </item>
                                                                </item>

                                                                <!-- Oculta postcode en Shipping -->
                                                                <item name="postcode" xsi:type="array">
                                                                    <item name="componentDisabled" xsi:type="boolean">true</item>
                                                                    <item name="visible"         xsi:type="boolean">false</item>
                                                                </item>

                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>

                                            </item>
                                        </item>

                                        <!-- Billing step -->
                                        <item name="billing-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="payments-list" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="billing-address-form" xsi:type="array">
                                                                    <item name="children" xsi:type="array">
                                                                        <item name="form-fields" xsi:type="array">
                                                                            <item name="children" xsi:type="array">

                                                                                <!-- Nombre primero -->
                                                                                <item name="firstname" xsi:type="array">
                                                                                    <item name="sortOrder" xsi:type="number">10</item>
                                                                                </item>

                                                                                <!-- Apellidos después -->
                                                                                <item name="lastname" xsi:type="array">
                                                                                    <item name="sortOrder" xsi:type="number">20</item>
                                                                                </item>

                                                                                <!-- Oculta postcode en Billing -->
                                                                                <item name="postcode" xsi:type="array">
                                                                                    <item name="componentDisabled" xsi:type="boolean">true</item>
                                                                                    <item name="visible"         xsi:type="boolean">false</item>
                                                                                </item>

                                                                            </item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>

                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
